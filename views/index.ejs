<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Clash of Clans Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Clash of Clans Dashboard</h1>
  <form id="fetchForm">
    <input type="text" id="tagInput" placeholder="Player tag (no #)" required>
    <button type="submit">Fetch</button>
  </form>

  <section>
    <h2>Town Hall</h2>
    <div id="townhall" class="grid"></div>
  </section>

  <section>
    <h2>Troops</h2>
    <div id="troops" class="grid"></div>
  </section>

  <section>
    <h2>Heroes</h2>
    <div id="heroes" class="grid"></div>
  </section>

  <section>
    <h2>Spells</h2>
    <div id="spells" class="grid"></div>
  </section>

  <script src="/script.js"></script>
</body>
</html>
